@page "/Equipment/EquipItemScreen"

@using ProjectBlazor.Data.Game
@inject ProjectBlazor.Data.Game.General.PbGame ProjectBlazorGame

<h3>EquipItemScreen</h3>

@foreach (ProjectBlazor.Data.Game.Equipment.PbEquipment item in ProjectBlazorGame.Equipment)
{
    <table class="table table-bordered table-sm">
        <tr>
            <td>
                <ProjectBlazor.Pages.Stats.EquipmentInfo Equipment="@item" EquipmentToCompare="@ProjectBlazorGame.GetPlayerEquippedItem(item.EquipmentType)" />
            </td>
            <td>
                <button class="btn btn-primary" @onclick="@(e => EquipItem(item.EquipmentType, item.Name))">
                    Equip
                </button>
            </td>
        </tr>
    </table>
}


@code {
    private void EquipItem(ProjectBlazor.Data.Game.General.PbTypes.EQUIPMENT_TYPE equipmentType, string name)
    {
        ProjectBlazorGame.EquipItem(equipmentType, name);
    }
}
